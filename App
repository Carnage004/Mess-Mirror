import React, { useState } from "react";
import AppShell from "./components/AppShell";
import SplashScreen from "./components/SplashScreen";
import LoginScreen from "./components/LoginScreen";
import Dashboard from "./components/Dashboard";
import MenuFeedbackScreen from "./components/MenuFeedbackScreen";

export default function App() {
  const [screen, setScreen] = useState("splash");
  const [user, setUser] = useState(null);
  const [currentMess, setCurrentMess] = useState(null);

  React.useEffect(() => {
    // Simulate splash timeout
    if (screen === "splash") {
      const timeout = setTimeout(() => setScreen("login"), 1400);
      return () => clearTimeout(timeout);
    }
  }, [screen]);

  function handleLogin(userData) {
    setUser(userData);
    setScreen("dashboard");
  }

  function handleViewMenu(messName) {
    setCurrentMess(messName);
    setScreen("menu");
  }

  function handleBack() {
    setScreen("dashboard");
  }

  return (
    <AppShell>
      {screen === "splash" && <SplashScreen />}
      {screen === "login" && <LoginScreen onLogin={handleLogin} />}
      {screen === "dashboard" && <Dashboard onViewMenu={handleViewMenu} />}
      {screen === "menu" && (
        <MenuFeedbackScreen messName={currentMess} onBack={handleBack} />
      )}
    </AppShell>
  );
}
